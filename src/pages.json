{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "uniapp牛刀小试",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/class-list/class-list",
      "style": {
        "navigationBarTitleText": "分类列表"
//        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/classify/classify",
      "style": {
        "navigationBarTitleText": "分类",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/user/user",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/preview/preview",
      "style": {
        "navigationBarTitleText": "预览",
        //    "enablePullDownRefresh": true,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/notice/notice",
      "style": {
        "navigationBarTitleText": "通知列表",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/notice/detail",
      "style": {
        "navigationBarTitleText": "通知详情",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/search/search",
      "style": {
        "navigationBarTitleText": "搜索页面",
        "enablePullDownRefresh": true
      }
    }
  ],
  "tabBar": {
    "color": "#ccc",
    "selectedColor": "$brand-theme-color",
    // "borderStyle": "white",
    "list": [
      {
        "iconPath": "static/tabBar/home.png",
        "selectedIconPath": "static/tabBar/home-h.png",
        "pagePath": "pages/index/index",
        "text": "推荐"
      },
      {
        "iconPath": "static/tabBar/classify.png",
        "selectedIconPath": "static/tabBar/classify-h.png",
        "pagePath": "pages/classify/classify",
        "text": "分类"
      },
      {
        "selectedIconPath": "static/tabBar/user-h.png",
        "iconPath": "static/tabBar/user.png",
        "pagePath": "pages/user/user",
        "text": "我的"
      }
    ],
    "backgroundColor": "white"
  },
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uniapp牛刀小试",
    "navigationBarBackgroundColor": "#fff",
    "backgroundColor": "#F8F8F8"
    //    "navigationStyle": "custom"
  },
  "uniIdRouter": {}
}